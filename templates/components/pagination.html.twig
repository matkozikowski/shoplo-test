{% if pagination is not empty %}
<nav class="mt-5">
    <ul class="pagination">


        <li class="page-item {% if pagination.prevPage <= 0 %}disabled{% endif %}">
            <a class="page-link" href="{{ path('index', {'page': pagination.prevPage}) }}" tabindex="-1">Previous</a>
        </li>


        {% set currentPage = app.request.get('page') %}
        {% if app.request.get('page') is empty %}
            {% set currentPage = 1 %}
        {% endif %}

        {% for page in range(1, pagination.pageCount) %}
            <li class="page-item {% if currentPage == page %}active{% endif %}">
                {% set pageNumber  = page ? page: 0 %}
                <a class="page-link" href="{{ path('index', {'page': page}) }}">{{ pageNumber }}</a>
            </li>
        {% endfor %}


        <li class="page-item {% if pagination.pageCount == pagination.currentPage %}disabled{% endif %}">
            <a class="page-link" href="{{ path('index', {'page': pagination.nextPage}) }}">Next</a>
        </li>


    </ul>
</nav>
{% endif %}